<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c6382"
    tools:context=".BusinessContactPage">

    <Button
        android:id="@+id/btn_addNewBusinessContact"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#60A3bc"
        android:text="@string/add"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_businessWebsiteUrl" />

    <EditText
        android:id="@+id/et_businessZipCode"
        android:layout_width="122dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#ffd1bc"
        android:textColor="#ffd1bc"
        android:ems="10"
        android:hint="@string/zipCodeHint"
        android:inputType="number"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_businessOpeningTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_businessState"
        app:layout_constraintTop_toBottomOf="@+id/et_businessStreetAddress" />

    <EditText
        android:id="@+id/et_businessState"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffd1bc"
        android:textColor="#ffd1bc"
        android:ems="10"
        android:hint="@string/stateHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_businessOpeningTime"
        app:layout_constraintStart_toEndOf="@+id/et_businessCity"
        app:layout_constraintEnd_toStartOf="@id/et_businessZipCode"
        app:layout_constraintTop_toBottomOf="@+id/et_businessStreetAddress" />

    <EditText
        android:id="@+id/et_businessCity"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffd1bc"
        android:textColor="#ffd1bc"
        android:ems="10"
        android:hint="@string/cityHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_businessOpeningTime"
        app:layout_constraintEnd_toStartOf="@id/et_businessState"
        app:layout_constraintTop_toBottomOf="@+id/et_businessStreetAddress" />

    <EditText
        android:id="@+id/et_businessStreetAddress"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffd1bc"
        android:textColor="#ffd1bc"
        android:ems="10"
        android:hint="@string/streetAddressHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_businessState"
        app:layout_constraintTop_toBottomOf="@+id/et_businessphoneEntry" />

    <EditText
        android:id="@+id/et_businessphoneEntry"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/phoneNumberHInt"
        android:inputType="phone"
        android:textColor="#ffd1bc"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/et_businessStreetAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_businessNameEntry" />

    <EditText
        android:id="@+id/et_businessNameEntry"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/nameHint"
        android:inputType="textPersonName"
        android:textColor="#ffd1bc"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/et_businessphoneEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_businessCompanyName" />

    <EditText
        android:id="@+id/et_businessOpeningTime"
        android:layout_width="188dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/openingTimeHint"
        android:inputType="time"
        android:textColor="#ffd1bc"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/et_businessWebsiteUrl"
        app:layout_constraintEnd_toStartOf="@+id/et_businessClosingTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_businessCity" />

    <EditText
        android:id="@+id/et_businessClosingTime"
        android:layout_width="186dp"
        android:layout_height="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/closingTimeHint"
        android:inputType="time"
        android:textColor="#ffd1bc"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_businessWebsiteUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_businessOpeningTime"
        app:layout_constraintTop_toBottomOf="@+id/et_businessZipCode"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/et_businessWebsiteUrl"
        android:layout_width="380dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffd1bc"
        android:textColor="#ffd1bc"
        android:ems="10"
        android:hint="@string/websiteUrlHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_addNewBusinessContact"
        app:layout_constraintTop_toBottomOf="@+id/et_businessOpeningTime" />

    <EditText
        android:id="@+id/et_businessCompanyName"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/companyNameHint"
        android:inputType="textPersonName"
        android:textColor="#ffd1bc"
        android:textColorHint="#ffd1bc"
        app:layout_constraintBottom_toTopOf="@id/et_businessNameEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>