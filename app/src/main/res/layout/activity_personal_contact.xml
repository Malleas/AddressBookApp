<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c6382"
    tools:context=".PersonalContactPage">

    <EditText
        android:id="@+id/et_personalCity"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/cityHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_personalDateOfBirth"
        app:layout_constraintEnd_toStartOf="@id/et_personalState"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_personalStreetAddress" />

    <EditText
        android:id="@+id/et_personalNameEntry"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/nameHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_personalPhoneEntry"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_personalPhoneEntry"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/phoneNumberHInt"
        android:inputType="phone"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_personalStreetAddress"
        app:layout_constraintTop_toBottomOf="@+id/et_personalNameEntry" />

    <EditText
        android:id="@+id/et_personalStreetAddress"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/streetAddressHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_personalCity"
        app:layout_constraintTop_toBottomOf="@+id/et_personalPhoneEntry" />

    <EditText
        android:id="@+id/et_personalState"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/stateHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/et_personalDateOfBirth"
        app:layout_constraintEnd_toStartOf="@id/et_personalZipCode"
        app:layout_constraintStart_toEndOf="@+id/et_personalCity"
        app:layout_constraintTop_toBottomOf="@+id/et_personalStreetAddress" />

    <EditText
        android:id="@+id/et_personalZipCode"
        android:layout_width="122dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/zipCodeHint"
        android:inputType="number"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_personalDateOfBirth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_personalState"
        app:layout_constraintTop_toBottomOf="@+id/et_personalStreetAddress"
        app:layout_constraintVertical_bias="0.471" />

    <EditText
        android:id="@+id/et_personalDateOfBirth"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/dateOfBirthHint"
        android:inputType="date"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_personalContactDescription"
        app:layout_constraintTop_toBottomOf="@+id/et_personalState" />

    <EditText
        android:id="@+id/et_personalContactDescription"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffd1bc"
        android:ems="10"
        android:hint="@string/contactDescriptionHint"
        android:inputType="textPersonName"
        android:textColorHint="#ffd1bc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_addNewPersonalContact"
        app:layout_constraintTop_toBottomOf="@+id/et_personalDateOfBirth" />

    <Button
        android:id="@+id/btn_addNewPersonalContact"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#60A3bc"
        android:text="@string/add"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_personalContactDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>